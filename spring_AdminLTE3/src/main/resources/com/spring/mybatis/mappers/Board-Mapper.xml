<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board-Mapper">
	
	<sql id="search">	
		<if test="searchType == 'tcw'.toString()">
			AND (
				(title LIKE '%'||#{keyword}||'%')
				OR
				(content LIKE '%'||#{keyword}||'%')
				OR
				(writer LIKE '%'||#{keyword}||'%')
			)	
		</if>
		<if test="searchType == 'tc'.toString()">
			AND (
				(title LIKE '%'||#{keyword}||'%')
				OR
				(content LIKE '%'||#{keyword}||'%')
			)	
		</if>
		<if test="searchType == 'cw'.toString()">
			AND (
				(writer LIKE '%'||#{keyword}||'%')
				OR
				(content LIKE '%'||#{keyword}||'%')
			)	
		</if>
		<if test="searchType == 't'.toString()">
			AND title LIKE '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'w'.toString()">
			AND writer LIKE '%'||#{keyword}||'%'			
		</if>
		<if test="searchType == 'c'.toString()">
			AND content LIKE '%'||#{keyword}||'%'			
		</if>		
	</sql>	
	<select id="selectBoardCriteria"
			parameterType="cri" 
			resultType="board">
		SELECT * 
		FROM board
		WHERE bno IS NOT NULL
		<include refid="search" />
		ORDER BY regdate DESC
	</select>
	<select id="selectBoardCriteriaTotalCount"
			parameterType="cri" 
			resultType="int">
		SELECT
		COUNT(*) 
		FROM board
		WHERE bno IS NOT NULL
		<include refid="search" />
		ORDER BY regdate DESC
	</select>
	
	
	<select id="selectBoardByBno" parameterType="int" resultType="board">
		SELECT *
		FROM board
		WHERE bno = #{bno}
	</select>
	
	
	<update id="insertBoard" parameterType="board">
		INSERT INTO 
		board(bno, title, writer, content, regdate)
		VALUES(#{bno},#{title},#{writer},#{content},SYSDATE)
	</update>	
		
		
	<update id="updateBoard" parameterType="board">
		UPDATE board
		SET
		title=#{title}, content=#{content}, updatedate=SYSDATE
		WHERE bno = #{bno}
	</update>
	
	
	<update id="deleteBoard">
		DELETE FROM board
		WHERE bno = #{bno}
	</update>
	
	
	<update id="increaseViewCnt" parameterType="int">
		UPDATE board
		SET
		viewcnt = viewcnt +1
		WHERE bno = #{bno}
	</update>
	
	
	<update id="modifyViewCntForModify" parameterType="int">
		UPDATE board
		SET
		viewcnt = viewcnt -1
		WHERE bno = #{bno}
	</update>
	
	
	<select id="selectBoardSeqNext" resultType="int">
		SELECT board_seq.nextval
		FROM dual
	</select>
	
	
</mapper>




